<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/forest"
    >

    <!--
    [ask it what it’s doing here] “Well I was stowing away in your cart which obviously was not a good idea but now I’m just trying to get home like you guess we should travel together”
    [Say ok]
    [just start walking] -->

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Well, I was hiding in your cart which obviously not a good idea. I am just trying to get home like you are. Should we travel together?"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_centerVertical="true"
        android:paddingTop="250dp"
        android:paddingBottom="10dp" />

    <ImageButton
        android:background="@drawable/blue_fairy"
        android:layout_width = "100dp"
        android:layout_height= "100dp"
        android:id="@+id/hint"
        android:onClick="onClick"
        android:layout_alignTop="@+id/text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp" />

    <Button
        android:id="@+id/okButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:onClick="onClick"
        android:layout_below="@+id/text1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/startWalkingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ignore and continue walking"
        android:onClick="onClick"
        android:layout_below="@+id/okButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>