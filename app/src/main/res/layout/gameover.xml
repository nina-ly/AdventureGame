<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gameoverscreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/forest">

    <ImageView
        android:src="@drawable/zelda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/endingImage"
        android:layout_above="@+id/gameovertext"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Main menu"
        android:id="@+id/mainMenu"
        android:onClick="onClickCave"
        android:layout_above="@+id/quitGame"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quit"
        android:id="@+id/quitGame"
        android:onClick="onClickCave"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/gameovertext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="end description!"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:paddingBottom="10dp"
        android:background="@color/black"
        android:layout_above="@+id/gameoverpoints"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/gameoverpoints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="points:"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:paddingBottom="10dp"
        android:background="@color/black"
        android:layout_above="@+id/mainMenu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>