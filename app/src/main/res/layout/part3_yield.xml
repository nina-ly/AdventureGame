<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/throneroom"
    tools:context="com.example.ninaly.adventuregame453.Cave">

    <ImageButton
        android:background="@drawable/blue_fairy"
        android:layout_width = "100dp"
        android:layout_height= "100dp"
        android:id="@+id/hint"
        android:layout_alignParentRight="true"
        android:onClick="onClick"
        />

    <ImageView
        android:src="@drawable/zelda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emerald"
        android:layout_above="@+id/text"
        android:layout_below="@+id/hint"
        android:layout_toStartOf="@+id/blue"
        android:layout_toLeftOf="@+id/blue" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:text="The King tells you about the magic that runs in their family and agrees to teach you one spell"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_above="@id/greenMagic"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/black"
        android:textAlignment="center"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Red Magic"
        android:id="@+id/redMagic"
        android:onClick="onClick"
        android:layout_above="@+id/blueMagic" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blue Magic"
        android:id="@+id/blueMagic"
        android:onClick="onClick"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Green Magic"
        android:id="@+id/greenMagic"
        android:layout_gravity="bottom"
        android:onClick="onClick"
        android:layout_above="@+id/redMagic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/greenmagic"
        android:layout_below="@+id/hint"
        android:layout_toRightOf="@+id/emerald"
        android:id="@+id/green"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>


    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/redmagic"
        android:id="@+id/red"
        android:layout_below="@+id/green"
        android:layout_toRightOf="@+id/emerald"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/blmagic"
        android:id="@+id/blue"
        android:layout_above="@+id/greenMagic"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="47dp" />


</RelativeLayout>
