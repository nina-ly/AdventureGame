<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/throneroom"
    tools:context="com.example.ninaly.adventuregame453.Cave">

    <ImageButton
        android:background="@drawable/blue_fairy"
        android:layout_width = "100dp"
        android:layout_height= "100dp"
        android:id="@+id/hint"
        android:layout_alignParentRight="true"
        android:onClick="onClickHint"
        />


    <ImageView
        android:src="@drawable/king"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/king"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/text"
        android:layout_below="@+id/hint" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ignore him"
        android:id="@+id/ignore"
        android:onClick="onClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Listen to his request"
        android:id="@+id/listen"
        android:layout_gravity="bottom"
        android:onClick="onClick"
        android:layout_above="@+id/ignore"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"

        android:id="@+id/text"
        android:text="You tell him of your struggle and he agrees to help but first he has something he wants to tell you "
        android:textColor="@color/white"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/black"
        android:textAlignment="center"/>
</RelativeLayout>
