<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/ogrecave2"
    tools:context="com.example.ninaly.adventuregame453.Cave">

    <ImageButton
        android:background="@drawable/blue_fairy"
        android:layout_width = "100dp"
        android:layout_height= "100dp"
        android:id="@+id/hint24"
        android:layout_alignParentRight="true"
        android:onClick="onClick2"
        />

    <ImageView
        android:src="@drawable/treasure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/treasure"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingTop="100dp"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:text="The door opens and you see a mountain of treasure."
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:paddingBottom="10dp"
        android:background="@color/black"
        android:layout_above="@id/goback"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:id="@+id/goback"
        android:layout_gravity="bottom"
        android:onClick="onClickCave"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
