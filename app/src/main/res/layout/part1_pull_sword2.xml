<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/exitforest">

    <ImageButton
        android:background="@drawable/blue_fairy"
        android:layout_width = "100dp"
        android:layout_height= "100dp"
        android:id="@+id/pullSwordFairy2"
        android:onClick="onImageClick"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The sword comes free and you can feel the power only if you did not attack the goblin or shoo away the fairy. If you did, you will hear a voice heathen from the sky from the sword. So did you commit any of these events?"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="140dp"
        android:id="@+id/textView2" />

    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:background="@drawable/freesword"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/takeTheSword"
        android:onClick="onClick"
        android:text="Take the sword"
        android:layout_above="@+id/punishment"
        android:layout_alignRight="@+id/pullSwordFairy2"
        android:layout_alignEnd="@+id/pullSwordFairy2" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/punishment"
        android:onClick="onClick"
        android:text="Receive punishment"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>