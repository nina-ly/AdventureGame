<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:screenOrientation="portrait"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/ogrecave"
    tools:context="com.example.ninaly.adventuregame453.Cave">

    <ImageButton
        android:background="@drawable/blue_fairy"
        android:layout_width = "100dp"
        android:layout_height= "100dp"
        android:id="@+id/hint8"
        android:layout_alignParentRight="true"
        android:onClick="onClick"
        />

    <ImageView
        android:src="@drawable/ogre6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ogre"
        android:layout_alignTop="@+id/text"
        android:layout_alignBottom="@+id/text"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:text="Night has fallen and the ogre has fallen asleep."
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:paddingTop="210dp"
        android:paddingBottom="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sneak Into Cave"
        android:id="@+id/sneakintocave"
        android:layout_gravity="bottom"
        android:onClick="onClick"
        android:layout_below="@+id/text"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kill Ogre In His Sleep"
        android:id="@+id/killogre"
        android:onClick="onClick"
        android:layout_below="@+id/sneakintocave" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Give Up"
        android:id="@+id/giveup"
        android:onClick="onClick"
        android:layout_below="@+id/killogre" />
</RelativeLayout>
