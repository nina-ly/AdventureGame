<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/castle"
    tools:context="com.example.ninaly.adventuregame453.Cave">

    <ImageButton
        android:background="@drawable/blue_fairy"
        android:layout_width = "100dp"
        android:layout_height= "100dp"
        android:id="@+id/hint"
        android:layout_alignParentRight="true"
        android:onClick="onClick"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:text="After exiting the cave you get to your village but when you get there you realize that it was also hit by that tornado, you go to the castle to see if you can find anyone, once you get there the castle is closed shut "
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_above="@+id/shoutLoud"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/black"
        android:textAlignment="center"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shout Really Loud"
        android:id="@+id/shoutLoud"
        android:layout_gravity="bottom"
        android:onClick="onClick"
        android:layout_above="@+id/doorbell"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ring Door bell"
        android:id="@+id/doorbell"
        android:onClick="onClick"
        android:layout_above="@+id/moat" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Swim across the moat"
        android:id="@+id/moat"
        android:onClick="onClick"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
