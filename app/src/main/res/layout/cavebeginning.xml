<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:screenOrientation="portrait"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/cavebeginning"
    tools:context="com.example.ninaly.adventuregame453.Cave">

    <ImageButton
        android:background="@drawable/blue_fairy"
        android:layout_width = "100dp"
        android:layout_height= "100dp"
        android:id="@+id/hint1"
        android:layout_alignParentRight="true"
        android:onClick="onClick2"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Regular Cave"
        android:id="@+id/regularcave"
        android:onClick="onClickCave"
        android:layout_alignParentBottom="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Regular Cave"
        android:id="@+id/regularcave"
        android:onClick="onClickCave"
        android:layout_alignParentBottom="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ogre Cave"
        android:id="@+id/ogrecave"
        android:layout_gravity="bottom"
        android:onClick="onClickCave"
        android:layout_above="@id/regularcave"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:text="After you walk out of the forest you see a massive mountain range that goes on in both directions for miles, you walk toward the opening you see in the mountain. As you get closer you see there are actually 2 openings one cave has a big ass ogre the other is just dark"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@color/black"
        android:layout_centerVertical="true"
        android:layout_above="@id/ogrecave"
        android:paddingBottom="10dp"/>

</RelativeLayout>
